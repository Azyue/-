<!--Adminpackage/addCuisine/addCuisine.wxml-->
<view class="box">

	<!-- 添加功能 -->
	<view class="input_item">
		菜系名称：<input type="text" maxlength="30" placeholder="填写菜系名称" value="{{cuisineName}}" bindinput="inputData"></input>
	</view>


	<!-- 图标上传 -->
	<view class="cu-form-group" style="margin-top: 40rpx;">
		<view class='title'>
			<text decode="true">&nbsp;&nbsp;<text decode="true" style="color:#EE0A24;">*</text>菜系图标（{{cuisineImg.length}}/1）</text>
		</view>
	</view>
	<view class="cu-form-group" style="padding-left:5px;">
		<view class="grid col-1 grid-square flex-sub">
			<view class="solids" bindtap="CoverImg" wx:if="{{isCoverImg}}">
				<text class="iconfont icon_add_img"></text>
			</view>

			<view class="bg-img" wx:else>
				<image src='{{cuisineImg}}' mode='aspectFill' bindtap="PWCoverImg"></image>
				<view class="cu-tag bg-red" catchtap="DECoverImg">
					<text class="iconfont icon_x_img"></text>
				</view>
			</view>

		</view>
	</view>

	<view class="input_button">
		<view class="bg_blue cancle_btn" bindtap="closeInput">取 消</view>
		<view class="bg_green confirm_btn" bindtap="confirmSubmit">确认添加</view>
	</view>
</view>