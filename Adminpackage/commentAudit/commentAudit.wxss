/* Adminpackage/commentAudit/commentAudit.wxss */
/* 轮播图 */
.swiper swiper {
    height: 600rpx;
}

.swiper image {
    width: 100%;
    height: 100%;
}

/* 店铺信息 */
.store_card {
    margin: 10rpx 20rpx;
    padding: 15rpx;
    border-radius: 15rpx;
    display: flex;
    background-color: #fff;
}

.store_card_img {
    width: 25%;
    height: 180rpx;
}

.store_card_img image {
    width: 100%;
    height: 100%;
    border-radius: 10rpx;
    overflow: hidden;
}

.store_card_info {
    width: 75%;
}

.store_card_info view {
    margin-top: 10rpx;
    margin-left: 10rpx;
}

.store_text_h1 {
    font-size: 16px;
    font-weight: bold;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
}

.store_text_h2 {
    font-size: 13px;
    font-weight: bold;
}

.store_text_h3 {
    font-size: 12px;
    font-weight: bold;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
}

/* 详情图片 */
.detail_img_box {
    display: flex;
    flex-direction: column;
    align-items: center;
    padding-bottom: 120rpx;
    margin: 20rpx;
    border-radius: 15rpx;
    background-color: #fff;
}

.detail_img {
    margin: 15rpx;
    padding: 10rpx;
    width: 600rpx;
    height: 500rpx;
}

.detail_img image {
    width: 100%;
    height: 100%;
    border-radius: 10rpx;
    overflow: hidden;
    box-shadow: 4px 4px 8px rgba(0, 0, 0, 0.5);
}

/* 按钮 */
.btn_box {
    margin: 20rpx;
    display: flex;
    flex-direction: row;
    justify-content: center;
}

.btn_box button {
    width: 300rpx;
    margin: 10rpx;
}

.btn_del {
    color: #fff;
    background: #EE0A24;
}