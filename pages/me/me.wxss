/* pages/me/me.wxss */
page {
	background: -webkit-linear-gradient(top, #efb336, #f0b767, #eeeeee);
}

/* 背景图 */
.bg_box {
	width: 100%;
	height: 400rpx;
}

.bg_box image {
	width: 100%;
	height: 100%;
	border-radius: 0rpx 0rpx 30rpx 30rpx;
	box-shadow: 4px 4px 8px rgba(141, 138, 138, 0.5);
}

/* 登录框 */
.login_box {
	height: 200rpx;
	margin: 20rpx;
	border-radius: 16rpx;
	display: flex;
	flex-direction: row;
	align-items: center;
	justify-content: center;
	background-color: #fff;
	box-shadow: 4px 4px 8px rgba(141, 138, 138, 0.5);
}

.login_click {
	margin: 10rpx;
	font-weight: bold;
	font-size: 15px;
	text-align: center;
}

.login_tips {
	margin: 10rpx;
	font-size: 13px;
	text-align: center;
	color: grey;

}

.logged_box {
	height: 200rpx;
	margin: 20rpx;
	border-radius: 16rpx;
	display: flex;
	flex-direction: row;
	align-items: center;
	justify-content: start;
	background-color: #fff;
	box-shadow: 4px 4px 8px rgba(141, 138, 138, 0.5);
}

.head_img {
	width: 25%;
}

.head_img image {
	margin: 10rpx;
	width: 150rpx;
	height: 150rpx;
	border-radius: 10rpx;
	overflow: hidden;
}

.user_info {
	width: 75%;
}

.nickname {
	margin: 10rpx;
	font-weight: bold;
	font-size: 15px;
	text-align: start;
	overflow: hidden;
	text-overflow: ellipsis;
	display: -webkit-box;
	-webkit-line-clamp: 1;
	-webkit-box-orient: vertical;
}

.user_type {
	margin: 10rpx;
	font-size: 10px;
	text-align: start;
	color: grey;
}

/* 服务框 */
.content-box {
	margin: 10rpx 18rpx;
	border-radius: 16rpx;
	background-color: #fff;
	box-shadow: 4px 4px 8px rgba(141, 138, 138, 0.5);
}

.content-title {
	height: 60rpx;
	line-height: 60rpx;
	padding-left: 10rpx;
	font-weight: bold;
}

.content-row {
	height: 70rpx;
	margin-top: 16rpx;
	overflow: hidden;
	border-radius: 16rpx;
	border-bottom: 2rpx #f0f0f0 solid;
}

.content-icon {
	width: 50rpx;
	height: 50rpx;
	margin-left: 20rpx;
	margin-top: 10rpx;
	float: left;
}

.content-icon image {
	width: 50rpx;
	height: 50rpx;
}

.content-text {
	height: 70rpx;
	line-height: 70rpx;
	margin-left: 100rpx;
}