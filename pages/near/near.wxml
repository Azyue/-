<!-- 地图 -->
<map style="position:{{position}}; width:{{width}};height: {{height}};" id="map" longitude="{{longitude}}" latitude="{{latitude}}" show-location="true" markers="{{markers}}" data-id="{{markers[0].id}}" bindmarkertap="markertap" bindregionchange="regionchangeMap">
</map>
<!-- 回到自己的可视范围 -->
<view class="map_tips_box">
    <view class="tips_item" bindtap="MyLocation">
        <image src="/images/myLocation.png"></image>
    </view>
</view>

<!-- 搜索框 -->
<view class="search main_bg_color">
    <view class="search_in">
        <image src="/images/search.png" bindtap="goSearch"></image>
        <input placeholder="请输入搜索内容" placeholder-class="pla" value="{{searchData}}" bindinput="searchInput" bindconfirm="goSearch" />
        <image class="clear_btn" src="/images/clear.png" wx:if="{{clear}}" bindtap="clearInput"></image>
    </view>
    <view class="change_map" bindtap="changeMap">
        <image src="{{changeMap == true?'/images/mappull.png':'/images/mapdown.png'}}"></image>
    </view>
</view>

