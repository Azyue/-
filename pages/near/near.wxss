/* pages/near/near.wxss */

/* 地图右边工具栏 */
.map_tips_box {
    position: absolute;
    right: 10rpx;
    top: 30%;
}

.tips_item {
    margin: 10rpx;
    padding: 10rpx;
    width: 80rpx;
    height: 80rpx;
}

.tips_item image {
    width: 100%;
    height: 100%;
}

/* 搜索框 */
.search {
    width: 100%;
    height: 80rpx;
    padding: 10rpx;
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: center;
    border-radius: 30rpx 30rpx 0 0;
}

.change_map {
    flex: 1;
    z-index: 999;
    padding: 20rpx;
    width: 200rpx;
    text-align: center;
}

.change_map image {
    width: 60rpx;
    height: 50rpx;
}

.search_in {
	margin: 10px;
    position: relative;
    width: 80%;
    height: 60rpx;
    display: flex;
    flex: 9;
    align-items: center;
    justify-content: space-between;
    box-sizing: border-box;
    border-radius: 45rpx;
    background-color: #fff;
}

.pla {
    text-align: center;
}

.search_in image {
	width: 42rpx; 
	height: 45rpx; 
	margin: 15rpx;
}

.search input {
    position: absolute;
    left:60rpx;
}

.clear_btn {
    z-index: 999;
    padding: 10rpx;
}
