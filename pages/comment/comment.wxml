<!--pages/comment/comment.wxml-->
<view class='contains'>

    <!-- 填写评论 -->
    <textarea auto-height="true" placeholder='期待您的评论' value="{{text}}" bindinput="inputValue"></textarea>

    <!-- 照片上传 -->
    <view class="cu-form-group" style="margin-top: 40rpx;">
        <view class='title'>
            <text decode="true">&nbsp;&nbsp;<text decode="true" style="color:#EE0A24;">*</text>上传图片（{{imgList.length}}/5）</text>
        </view>
    </view>
    <view class="cu-form-group" style="padding-left:5px;">
        <view class="grid col-5 grid-square flex-sub">
            <view class="bg-img" wx:for="{{imgList}}" wx:key="index" bindtap="preViewMedia" data-type="{{item.fileType}}" data-url="{{item.tempFilePath}}" data-poster="{{item.thumbTempFilePath}}" data-index="{{index}}">
                <image src='{{item.fileType == "image"?item.tempFilePath:item.thumbTempFilePath}}' mode='aspectFill'></image>
                <view class="cu-tag bg-red" catchtap="DelImg" data-index="{{index}}">
                    <text class="iconfont icon_x_img"></text>
                </view>
            </view>
            <view class="solids" bindtap="ChooseMedia" wx:if="{{imgList.length<5}}">
                <text class="iconfont icon_add_img"></text>
            </view>
        </view>
    </view>

    <!-- 视频上传 -->
    <view class="cu-form-group" style="margin-top: 40rpx;">
        <view class='title'>
            <text decode="true">&nbsp;&nbsp;<text decode="true" style="color:#EE0A24;">*</text>上传视频（{{videoList.length}}/5）</text>
        </view>
    </view>
    <view class="cu-form-group" style="padding-left:5px;">
        <view class="grid col-5 grid-square flex-sub">
            <view class="bg-img" wx:for="{{videoList}}" wx:key="index" bindtap="preViewMedia" data-type="{{item.fileType}}" data-url="{{item.tempFilePath}}" data-poster="{{item.thumbTempFilePath}}" data-index="{{index}}">
                <video style="width: 120rpx; height: 120rpx;" src="{{item.tempFilePath}}" poster="{{item.thumbTempFilePath}}" object-fit="cover"></video>
                <view class="cu-tag bg-red" catchtap="DelVide" data-index="{{index}}">
                    <text class="iconfont icon_x_img"></text>
                </view>
            </view>
            <view class="solids" bindtap="ChooseMedia" wx:if="{{videoList.length<5}}">
                <text class="iconfont icon_add_img"></text>
            </view>
        </view>
    </view>

    <!-- 评分 -->
    <view class='score'>
        <view class='score-left'>
            <view>
                <text>评分:</text>
            </view>
        </view>
        <view class='score-right'>
            <view wx:for-items="{{score_img_arr}}" wx:for-item="img" wx:key="index">
                <image bindtap='onScore' data-score='{{index+1}}' src="{{img}}" />
            </view>
            <view class='score_text'>
                <text>{{score_text}}</text>
            </view>
        </view>
    </view>

    <!-- 提交按钮 -->
    <view class="btn_box">
        <button bindtap='onSubmitBtn'>发表评论</button>
    </view>
</view>