/* pages/home/home.wxss */
/* 搜索框 */
.search {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100rpx;
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: space-between;
}

.city {
    margin: 5rpx;
    width: 20%;
    display: flex;
    flex-direction: row;
    justify-content: space-around;
}

.city_text {
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    text-align: center;
    font-size: 10px;
    font-weight: bolder;
    color: #ffffff;
}

.city image {
    padding: 0 5rpx 0 5rpx;
    width: 30rpx;
    height: 30rpx;
}

.search_in {
    position: relative;
    width: 60%;
    height: 60rpx;
    display: flex;
    align-items: center;
    justify-content: space-between;
    box-sizing: border-box;
    border-radius: 40rpx;
    background-color: #fff;
}

.search_in image {
    width: 42rpx;
    height: 45rpx;
    margin: 15rpx;
}

.search input {
    width: 275rpx;
    position: absolute;
    left: 60rpx;
}

.clear_btn {
    z-index: 999;
    padding: 10rpx;
}

.scan {
    width: 10%;
    margin: 10rpx;
}

.scan image {
    height: 50rpx;
    width: 50rpx;
}

/* 轮播图 */
.swiper_box {
    margin-top: 100rpx;
}
.swiper_box swiper {
    height: 360rpx;
    overflow: hidden;
}

.swiper_box image {
    width: 100%;
    height: 100%;
}

/* 菜系列表 */
.sudoku_box {
    padding-top: 10rpx;
    margin-bottom: -100rpx;
    background: -webkit-linear-gradient(top, #ef3636, #f17979, #eeeeee);
}

.sudoku_list {
    padding: 10rpx;
    height: auto;
    display: flex;
    flex-wrap: wrap;
    flex-direction: row;
    justify-content: center;
    border-radius: 30rpx;
    backdrop-filter: blur(10px);
    background: rgba(250, 250, 250, 0.5);
    box-shadow: 4px 4px 8px rgba(141, 138, 138, 0.5);
}

.item_ckd {
    padding: 4rpx;
    border-radius: 30rpx;
    background-color: rgba(239, 179, 54, 0.4);
    box-shadow: 4px 4px 8px rgba(141, 138, 138, 0.5);
}

.sudoku_item {
    width: 130rpx;
    margin: 4rpx;
    padding: 4rpx;
}

.sudoku_item_name {
    margin: 5rpx;
    text-align: center;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
}

.sudoku_item_img {
    margin-top: 15rpx;
    margin-left: 15rpx;
    width: 100rpx;
    height: 100rpx;
    border-radius: 50rpx;
    overflow: hidden;
    box-shadow: 4px 4px 8px rgba(99, 95, 95, 0.6);
}

/* 排序 */
.sort_box {
    margin-top: 110rpx;
}