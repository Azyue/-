<!--StorePackage/addChef/addChef.wxml-->

<view class="box">
	<view class="input_item">
        <view>厨师名字：</view>
		<input class="text_blue" maxlength="30" placeholder="填写名字" value="{{chefName}}" data-id="name" name="name" bindinput="inputData"></input>
	</view>
	<view class="input_item">
        <view>擅长菜系：</view>
		<input class="text_blue" maxlength="60" placeholder="填写菜系" value="{{chefCuisine}}" data-id="cuisine" name="cuisine" bindinput="inputData"></input>
	</view>


	<!-- 厨师上传 -->
	<view class="cu-form-group" style="margin-top: 40rpx;">
		<view class='title'>
			<text decode="true">&nbsp;&nbsp;<text decode="true" style="color:#EE0A24;">*</text>厨师图片（{{chefImg.length}}/1）</text>
		</view>
	</view>
	<view class="cu-form-group" style="padding-left:5px;">
		<view class="grid col-3 grid-square flex-sub">
			<view class="solids" bindtap="chefImg" wx:if="{{ischefImg}}">
				<text class="iconfont icon_add_img"></text>
			</view>

			<view class="bg-img" wx:else>
				<image src='{{chefImg}}' mode='aspectFill' bindtap="PWchefImg"></image>
				<view class="cu-tag bg-red" catchtap="DEchefImg">
					<text class="iconfont icon_x_img"></text>
				</view>
			</view>

		</view>
	</view>

	<!-- 菜系照片上传 -->
	<view class="cu-form-group" style="margin-top: 40rpx;">
		<view class='title'>
			<text decode="true">&nbsp;&nbsp;<text decode="true" style="color:#EE0A24;">*</text>菜系图片（{{cuisineImg.length}}/5）</text>
		</view>
	</view>
	<view class="cu-form-group">
		<view class="grid col-5 grid-square flex-sub">
			<view class="bg-img" wx:for="{{cuisineImg}}" wx:key="index" bindtap="PWcuisineImg" data-url="{{cuisineImg[index]}}">
				<image src='{{cuisineImg[index]}}' mode='aspectFill'></image>
				<view class="cu-tag bg-red" catchtap="DEcuisineImg" data-index="{{index}}" data-img="{{cuisineImg[index]}}">
					<text class="iconfont icon_x_img"></text>
				</view>
			</view>
			<view class="solids" bindtap="cuisineImg" wx:if="{{cuisineImg.length<5}}">
				<text class="iconfont icon_add_img"></text>
			</view>
		</view>
	</view>

	<view class="input_button">
		<!-- 关闭输入框 -->
		<view class="bg_blue cancle_btn" bindtap="closeBtn">取 消</view>
		<!-- 确认提交 -->
		<view class="bg_green confirm_btn" bindtap="confirmBtn">确认添加</view>
	</view>
</view>