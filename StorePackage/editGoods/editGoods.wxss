/* Adminpackage/editGoods/editGoods.wxss */
/* 盒子 */
.edit_box {
    margin: 10rpx 30rpx;
    padding: 60rpx;
    border-radius: 10rpx;
    background-color: #fff;
}

.edit_item {
    width: 100%;
    height: 80rpx;
    line-height: 80rpx;
    display: inline-flex;
    font-size: 14px;
    font-weight: bold;
    padding: 10rpx;
    border-bottom: 1px #42A5F5 solid;
}

/* 输入框标题 */
.input_title {
    font-size: 18px;
    font-weight: bold;
    text-align: center;
    margin-bottom: 40rpx;
}

.input_desc {
    margin: 20rpx;
    font-size: 12px;
}