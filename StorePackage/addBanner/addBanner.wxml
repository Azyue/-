<!--StorePackage/addBanner/addBanner.wxml-->
<!-- 提示 -->
<view class="box">
	<text class="tips text_tips_spring">【提示】：轮播图将在店铺页展示，请上传本店相关的图片</text>
</view>
<view class="box">
	<!-- 照片上传 -->
	<view class="cu-form-group" style="margin-top: 40rpx;">
		<view class='title'>
			<text decode="true">&nbsp;&nbsp;<text decode="true" style="color:#EE0A24;">*</text>上传图片（{{imgList.length}}/5）</text>
		</view>
	</view>
	<view class="cu-form-group" style="padding-left:5px;">
		<view class="grid col-5 grid-square flex-sub">
			<view class="bg-img" wx:for="{{imgList}}" wx:key="index" bindtap="ViewImage" data-url="{{imgList[index]}}">
				<image src='{{imgList[index]}}' mode='aspectFill'></image>
				<view class="cu-tag bg-red" catchtap="DelImg" data-index="{{index}}" data-img="{{imgList[index]}}">
					<text class="iconfont icon_x_img"></text>
				</view>
			</view>
			<view class="solids" bindtap="ChooseImage" wx:if="{{imgList.length<5}}">
				<text class="iconfont icon_add_img"></text>
			</view>
		</view>
	</view>

	<view class="input_button">
		<!-- 关闭输入框 -->
		<view class="bg_blue cancle_btn" bindtap="close">取 消</view>
		<!-- 确认提交 -->
		<view class="bg_green confirm_btn" data-id="{{id}}" bindtap="Submit">确认上传</view>
	</view>
</view>